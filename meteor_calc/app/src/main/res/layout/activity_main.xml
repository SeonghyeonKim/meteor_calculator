<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:id="@+id/activityMain">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00:20:00"
        android:textSize="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/resultView"
        android:layout_marginTop="100dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:background="@drawable/round_button"
        android:text="시작"
        android:textSize="15dp"
        android:id="@+id/startB"
        app:layout_constraintTop_toBottomOf="@id/resultView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="50dp"
        android:textColor="#FF0000"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/produceL"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/numberL"
        android:orientation="horizontal"
        android:weightSum="4">


        <TextView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="187"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/square"
            android:textColor="#FF0000"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="137"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/square"
            android:textColor="#FF0000"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="87"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/square"
            android:textColor="#FF0000"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="37"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/square"
            android:textColor="#FF0000"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/destroyL"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/produceL"
        android:orientation="horizontal"
        android:weightSum="4">


        <TextView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/square"
            android:id="@+id/d1text"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="#FF0000"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/square"
            android:id="@+id/d2text"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="#FF0000"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/square"
            android:id="@+id/d3text"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="#FF0000"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/square"
            android:id="@+id/d4text"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="#FF0000"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/destroyB"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="50dp"
        android:id="@+id/destroyL"
        android:orientation="horizontal"
        android:weightSum="4">

        <TextView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/square"
            android:id="@+id/p1text"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="#FF0000"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/square"
            android:id="@+id/p2text"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="#FF0000"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/square"
            android:id="@+id/p3text"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="#FF0000"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/square"
            android:id="@+id/p4text"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="#FF0000"/>

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:text="파괴"
        android:textSize="15dp"
        android:id="@+id/destroyB"
        android:background="@drawable/round_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="100dp"
        android:textColor="#FF0000"/>


</androidx.constraintlayout.widget.ConstraintLayout>